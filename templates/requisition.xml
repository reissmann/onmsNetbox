<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<model-import xmlns="http://xmlns.opennms.org/xsd/config/model-import" date-stamp="2021-04-21T17:10:41.353+02:00" foreign-source="{{ requisition }}" last-import="2021-04-21T17:11:20.988+02:00">
{% for node in nodelist %}
  <node building="{{ node.building }}" city="Fulda" foreign-id="420000{{ node.id }}" node-label="{{ node.name }}">
    {% if node.primary_ip4 %}
    <interface ip-addr="{{ node.primary_ip4 }}" status="1" snmp-primary="P">
      <monitored-service service-name="ICMP-30s"/>
      <monitored-service service-name="SNMP"/>
      <monitored-service service-name="SSH"/>
      {% if node.device_type == 'cisco' %}
      <monitored-service service-name="Cisco-PowerSupply-Monitor"/>
      <monitored-service service-name="Cisco-Temperature-Monitor"/>
      <monitored-service service-name="Cisco-Fan-Monitor"/>
      {% endif %}
      {% for interfaceID in node.uplinks %}
      <monitored-service service-name="SNMP-Interface-{{ interfaceID }}"/>
      {% endfor %}
    </interface>
    {% endif %}
    {% if node.primary_ip6 %}
    <interface ip-addr="{{ node.primary_ip6 }}" status="1" snmp-primary="N">
      <monitored-service service-name="ICMP"/>
    </interface>
    {% endif %}
    <category name="notifyPolling_NOC"/>
    <category name="viewCisco"/>
    <category name="grafanaCisco"/>
    <asset name="longitude" value="{{ node.longitude }}"/>
    <asset name="latitude" value="{{ node.latitude }}"/>
  </node>
  {% endfor %}
</model-import>
